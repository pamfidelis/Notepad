<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    tools:context="home.pam.notepad.MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:srcCompat="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/txt_anotacao" />

    <EditText
        android:id="@+id/txt_anotacao"
        android:layout_width="320dp"
        android:layout_height="360dp"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:background="@drawable/fundo_anotacao"
        android:gravity="start"
        android:inputType="textMultiLine"
        android:paddingBottom="5dp"
        android:paddingEnd="5dp"
        android:paddingLeft="35dp"
        android:paddingRight="5dp"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/btn_salvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_anotacao"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/botao_salvar" />

</RelativeLayout>
